;; Set and map

syntax set(syntax K) = SET K*   hint(show %latex("\\{") % %latex("\\}"))
syntax map(syntax K, syntax V) = MAP (K, V)*  hint(show %latex("\\{") % %latex("\\}"))

;; Display Hack to enclose the set in curly braces
def $in_set(syntax K, K*) : bool   hint(show % <- %latex("\\{") % %latex("\\}"))


;; Type identifiers

syntax tid = id

def $fresh_tid() : tid  hint(show FRESH#_#TID)


;; Function identifiers

syntax fid = id
