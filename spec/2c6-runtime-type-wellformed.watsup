def $nestable_senumt'(NewT id typ) = $nestable_newt_in_senumt(typ)
def $nestable_senumt'(typ) = false -- otherwise

rule Type_wf/senumt:
  tidset |- SEnumT id typ (member, val)*
  -- if $distinct_(member, member*)
  -- if $nestable_senumt(typ)
  -- Type_wf: tidset |- typ

