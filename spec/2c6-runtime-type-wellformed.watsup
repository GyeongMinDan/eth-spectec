rule ConsType_wf/packaget:
  tidset |- ConsT paramtyp* typ
  -- CParamTypes_wf: tidset consctxt |- paramtyp*
  -- Type_wf: tidset |- typ
  -- if PackageT ty* = $canon_typ(typ)
  ----
  -- if (id dir typ val = paramtyp)*
